<odoo>
    <record id="view_reject_bonus_wizard_form" model="ir.ui.view">
        <field name="name">reject.bonus.wizard.form</field>
        <field name="model">reject.bonus.wizard</field>
        <field name="arch" type="xml">
            <form string="Reject Bonus">
                <group>
                    <field name="rejection_reason"/>
                </group>
                <footer>
                    <button string="Reject" type="object" name="confirm_rejection" class="btn btn-danger"/>
                    <button string="Cancel" special="cancel" class="btn btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_reject_bonus_wizard" model="ir.actions.act_window">
        <field name="name">Reject Bonus</field>
        <field name="res_model">reject.bonus.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="model_hr_employee_bonus"/>
    </record>
</odoo>
