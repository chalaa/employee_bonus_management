<odoo>
    <data noupdate="1">

        <!-- Rule for the employee to see only it's bonuses  -->
        <record id="bonus_rule_employee" model="ir.rule">
            <field name="name">Bonus: Employees See Own</field>
            <field name="model_id" ref="model_hr_employee_bonus"/>
            <field name="groups" eval="[(4, ref('hr.group_hr_user'))]"/>
            <field name="domain_force">['|',('employee_id.user_id', '=', user.id),('employee_id.parent_id.user_id', '=', user.id),('state', '!=', 'draft')]</field>
        </record>

        <!-- Rule for the manager to se his bonuses and his employee  -->

        <!-- Rule for HR Manager - see all -->
        <record id="rule_bonus_hr_manager_all" model="ir.rule">
            <field name="name">HR Manager: See All Bonuses</field>
            <field name="model_id" ref="model_hr_employee_bonus"/>
            <field name="groups" eval="[(4, ref('hr.group_hr_manager'))]"/>
            <field name="domain_force">[(1, '=', 1)]</field>
        </record>
    </data>
</odoo>
